<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/textbox_outline">

    <ImageView
        android:id="@+id/image_view_history_cart"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:layout_marginRight="15dp" />

    <TextView
        android:id="@+id/text_view_history_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/image_view_history_cart"
        android:text="name"
        android:textColor="@color/black"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/text_view_history_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_history_name"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/image_view_history_cart"
        android:text="price"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/text_view_history_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_history_price"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/image_view_history_cart"
        android:gravity="center"
        android:text="quantity"
        android:textSize="20dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/text_view_history_quantity"
        android:layout_marginTop="13dp" />

</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_layout"
    android:orientation="vertical">


    <include layout="@layout/app_bar"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_baseline_person_pin_24" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edit_text_myaccount_name"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="Account Information"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/edit_text_myaccount_name"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_margin="3dp"
        android:background="@drawable/textbox_outline"
        android:gravity="center"
        android:padding="16dp"
        android:hint="Name"
        android:textColor="#B40000" />

    <EditText
        android:id="@+id/edit_text_myaccount_email"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/edit_text_myaccount_name"
        android:layout_centerHorizontal="true"
        android:layout_margin="3dp"
        android:background="@drawable/textbox_outline"
        android:gravity="center"
        android:hint="Email"
        android:padding="16dp"
        android:textColor="#B40000" />

    <EditText
        android:id="@+id/edit_text_myaccount_password"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/edit_text_myaccount_email"
        android:layout_centerHorizontal="true"
        android:layout_margin="3dp"
        android:background="@drawable/textbox_outline"
        android:gravity="center"
        android:hint="Password"
        android:padding="16dp"
        android:textColor="#B40000" />

    <EditText
        android:id="@+id/edit_text_myaccount_mobile"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/edit_text_myaccount_password"
        android:layout_centerHorizontal="true"
        android:layout_margin="3dp"
        android:background="@drawable/textbox_outline"
        android:gravity="center"
        android:hint="Mobile"
        android:padding="16dp"
        android:textColor="#B40000" />


    <TextView
        android:id="@+id/text_view_myaccount_name"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_margin="3dp"
        android:background="@drawable/textbox_outline"
        android:gravity="center"
        android:padding="16dp"
        android:text="Name"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/button_myaccount_edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/text_view_myaccount_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_baseline_border_color_24" />


    <TextView
        android:id="@+id/text_view_myaccount_email"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/edit_text_myaccount_name"
        android:layout_centerHorizontal="true"
        android:layout_margin="3dp"
        android:background="@drawable/textbox_outline"
        android:gravity="center"
        android:padding="16dp"
        android:text="Email"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/button_myaccount_edit_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/text_view_myaccount_email"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_baseline_border_color_24" />

    <TextView
        android:id="@+id/text_view_myaccount_password"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/edit_text_myaccount_email"
        android:layout_centerHorizontal="true"
        android:layout_margin="3dp"
        android:background="@drawable/textbox_outline"
        android:gravity="center"
        android:padding="16dp"
        android:text="Password"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/button_myaccount_edit_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/text_view_myaccount_password"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_baseline_border_color_24" />

    <TextView
        android:id="@+id/text_view_myaccount_mobile"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/edit_text_myaccount_password"
        android:layout_centerHorizontal="true"
        android:layout_margin="3dp"
        android:background="@drawable/textbox_outline"
        android:gravity="center"
        android:padding="16dp"
        android:text="Mobile"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/button_myaccount_edit_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/text_view_myaccount_mobile"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_baseline_border_color_24" />


    <Button
        android:id="@+id/button_myaccount_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="50dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/button_layout_green"
        android:padding="15dp"
        android:text="Update User Info"
        android:textColor="@color/white"
        android:visibility="gone" />


</RelativeLayout>